#:kivy 1.0.9

<BtcWidget>:
    cryptoLogo: cryptoLogo
    spacing: 10
    padding: 10
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        size: root.size
        orientation: 'vertical'

        Label:
            font_size: 40  
            center_x: root.width * 1/2
            text: root.cryptoDict['name']
            color: 1,1,1,1        
                    
        Label:
            font_size: 20  
            center_x: root.width * 1/2
            text: root.cryptoDict['price']
              
        Image:
            id: cryptoLogo   

        Label:
            font_size: 20  
            center_x: root.width * 1/2
            text: root.cryptoDict['change']
            markup: True
            
        Label:
            font_size: 20  
            center_x: root.width * 1/2
            text: root.cryptoDict['volume']
